{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "width": 840,
  "height": 510,
  "autosize": {
    "type": "fit",
    "contains": "padding"
  },
  "title": {
    "text": "1 Jan 2014 - 14 Sep 2024",
    "fontSize": 18,
    "font": "Arial",
    "anchor": "start",
    "dy": -10
  },
  "config": {
    "background": "#fffde7"
  },
  "projection": {
    "type": "mercator",
    "center": [135.0, -28.0],
    "scale": 550,
    "translate": [350, 200]
  },
  "layer": [
    {
      "data": { "sphere": true },
      "mark": {
        "type": "geoshape",
        "fill": "#dcecff"
      }
    },
    {
      "data": { "graticule": true },
      "mark": {
        "type": "geoshape",
        "stroke": "#ccc",
        "strokeWidth": 0.5
      }
    },
    {
      "data": {
        "url": "./js/ne_110m_jus_aus.json",
        "format": { "type": "topojson", "feature": "gadm41_AUS_1" }
      },
      "mark": {
        "type": "geoshape",
        "fill": "#d7ccc8",
        "stroke": "#ffffff"
      }
    },
    {
      "data": {
        "url": "./data/tornado.csv"
      },
      "transform": [
        {
          "calculate": "toNumber(datum.Latitude)",
          "as": "latitude"
        },
        {
          "calculate": "toNumber(datum.Longitude)",
          "as": "longitude"
        },
        {
          "filter": "datum.latitude !== 0 && datum.longitude !== 0"
        }
      ],
      "params": [
        {
          "name": "State_highlight",
          "select": { "type": "point", "fields": ["State"] },
          "bind": "legend"
        }
      ],
      "mark": {
        "type": "point",
        "tooltip": true
      },
      "encoding": {
        "longitude": { "field": "longitude", "type": "quantitative" },
        "latitude": { "field": "latitude", "type": "quantitative" },
        "size": {
          "field": "Fujita scale",
          "type": "quantitative",
          "title": "Magnitude (Fuji scale)",
          "scale": { "domain": [-1, 5] }
        },
        "color": {
          "field": "Max speed (km/h)",
          "type": "quantitative",
          "title": "Max speed in km/h",
          "scale": { "scheme": "reds", "domain": [0, 300] }
        },
        "shape": {
          "field": "State",
          "type": "nominal",
          "scale": {
            "domain": ["NSW", "QLD", "VIC", "NT", "WA", "TAS"],
            "range": ["circle", "square", "triangle", "cross", "diamond", "triangle-down"]
          },
          "legend": { "title": "State", "orient": "right" } 
        },
        
        "opacity": {
          "condition": { "param": "State_highlight", "value": 0.6 },
          "value": 0.1
        },
        "tooltip": [
          { "field": "longitude", "type": "quantitative", "title": "Longitude" },
          { "field": "latitude", "type": "quantitative", "title": "Latitude" },
          { "field": "Fujita scale", "type": "quantitative", "title": "Magnitude (Fuji scale)" },
          { "field": "Max speed (km/h)", "type": "quantitative", "title": "Max speed (km/h)" },
          { "field": "State", "type": "nominal", "title": "State" }
        ]
      }
    }
  ]
}
