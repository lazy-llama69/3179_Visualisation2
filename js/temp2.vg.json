{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "width": 900,
  "height": 480,
  "autosize": {
    "type": "fit",
    "contains": "padding"
  },
  "params": [
    {
      "name": "Magnitude_filter",
      "value": 0,
      "bind": {
        "input": "range",
        "min": 0,
        "max": 3,
        "step": 1,
        "name": "Minimum Magnitude (Fuji scale): "
      
      }
      
    }
    
  ],
  "title": {
    "text": "Seismic Activity since 2010",
    "fontSize": 18,
    "font": "Helvetica",
    "anchor": "middle",
    "dy": -10
  },
  "config": {
    "background": "#fffef7"
  },
  "projection": {
    "type": "mercator",
    "center": [130.0, -27.0],
    "scale": 550,
    "translate": [350, 200]
  },
  "layer": [
    {
      "data": { "sphere": true },
      "mark": {
        "type": "geoshape",
        "fill": "#e8f2ff"
      }
    },
    {
      "data": { "graticule": true },
      "mark": {
        "type": "geoshape",
        "stroke": "#ccc",
        "strokeWidth": 0.5
      }
    },
    {
      "data": {
        "url": "./js/ne_110m_jus_aus.json",
        "format": { "type": "topojson", "feature": "gadm41_AUS_1" }
      },
      "mark": {
        "type": "geoshape",
        "fill": "#d0b8ac",
        "stroke": "#ffffff"
      }
    },
    {
      "data": {
        "url": "./data/tornado.csv"
      },
      "transform": [
        {
          "calculate": "toNumber(datum.Latitude)",
          "as": "latitude"
        },
        {
          "calculate": "toNumber(datum.Longitude)",
          "as": "longitude"
        },
        {
          "filter": "datum.latitude != 0 && datum.longitude != 0"
        },
        {
          "filter": "datum['Fujita scale'] >= Magnitude_filter"
        }
      ],
      "mark": {
        "type": "point",
        "tooltip": true
      },
      "encoding": {
        "longitude": { "field": "longitude", "type": "quantitative" },
        "latitude": { "field": "latitude", "type": "quantitative" },
        "size": {
          "field": "Fujita scale",
          "type": "quantitative",
          "title": "Magnitude (Fuji scale)",
          "scale": { "domain": [-1, 3] }
        },
        "color": {
          "field": "Max speed (km/h)",
          "type": "quantitative",
          "title": "Max speed in km/h",
          "scale": { "scheme": "reds", "domain": [0, 300] }
        },
        "opacity": {
          "value": 0.8
        },
        "tooltip": [
          { "field": "State", "type": "nominal", "title": "State" },
          { "field": "Fujita scale", "type": "quantitative", "title": "Magnitude (Fuji scale)" },
          { "field": "Max speed (km/h)", "type": "quantitative", "title": "Max speed (km/h)" }
        ]
      }
    },
    {
      "data": {
        "url": "./data/tornado.csv"
      },
      "transform": [
        {
          "calculate": "toNumber(datum.Latitude)",
          "as": "latitude"
        },
        {
          "calculate": "toNumber(datum.Longitude)",
          "as": "longitude"
        },
        {
          "filter": "datum.latitude != 0 && datum.longitude != 0"
        },
        {
          "filter": "datum['Fujita scale'] >= 3"  
        },
        {
          "calculate": "'Magnitude: ' + datum['Fujita scale'] + ', Max Speed: ' + datum['Max speed (km/h)'] +'km/h' ",
          "as": "customAnnotation"
        },
        {
          "filter": "Magnitude_filter == 3"  
        }
      ],
      "mark": {
        "type": "text",
        "align": "left",
        "dx":10,
        "dy": -10,
        "fontSize": 10,
        "fontWeight": "bold",
        "fill": "black"
      },
      "encoding": {
        "longitude": { "field": "longitude", "type": "quantitative" },
        "latitude": { "field": "latitude", "type": "quantitative" },
        "text": { "field": "customAnnotation", "type": "nominal" }

      }
    }
  ]
}
