{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "width": 900,
    "height": 480,
    "autosize": {
      "type": "fit",
      "contains": "padding"
    },
    "params": [
        {
            "name": "Hail_size_filter",
            "value": 0,
            "bind": {
              "input": "range",
              "min": 0,
              "max": 16,
              "step": 1,
              "name": "Minimum Hail Size (cm): "
            }
          }
        ],
    "title": {
      "text": "Hailstorm Activity since 2010",
      "fontSize": 18,
      "font": "Helvetica",
      "anchor": "middle",
      "dy": -10
    },
    "config": {
      "background": "#fffef7"
    },
    "projection": {
      "type": "mercator",
      "center": [135.0, -28.0],
      "scale": 550
    },
    "layer": [
      {
        "data": {"sphere": true},
        "mark": {
          "type": "geoshape",
          "fill": "#e8f2ff"
        }
      },
      {
        "data": {"graticule": true},
        "mark": {
          "type": "geoshape",
          "stroke": "#ccc",
          "strokeWidth": 0.5
        }
      },
      {
        "data": {
          "url": "./js/ne_110m_jus_aus.json",
          "format": {"type": "topojson", "feature": "gadm41_AUS_1"}
        },
        "mark": {
          "type": "geoshape",
          "fill": "#d0b8ac",
          "stroke": "#ffffff"
        }
      },
      {
        "data": {
          "url": "./data/hail.csv"
        },
        "transform": [
          {
            "calculate": "toNumber(datum.Latitude)",
            "as": "latitude"
          },
          {
            "calculate": "toNumber(datum.Longitude)",
            "as": "longitude"
          },
          {
            "filter": "datum.latitude != 0 && datum.longitude != 0"
          },
          {
            "filter": "datum['Hail size'] >= Hail_size_filter"
          }
        ],
        "mark": {
          "type": "circle",
          "tooltip": true
        },
        "encoding": {
          "longitude": {"field": "longitude", "type": "quantitative"},
          "latitude": {"field": "latitude", "type": "quantitative"},
          "size": {
            "field": "Hail size",
            "type": "quantitative",
            "title": "Hail size (cm)",
            "scale": {"domain": [0, 16]}
          },
          "color": {
            "field": "Duration",
            "type": "quantitative",
            "title": "Duration in mins",
            "scale": {"scheme": "blueorange", "domain": [0, 160]}
          },
          "opacity": {
            "value": 0.8
          },
          "tooltip": [
            {"field": "longitude", "type": "quantitative", "title": "Longitude"},
            {"field": "latitude", "type": "quantitative", "title": "Latitude"},
            {"field": "Hail size", "type": "quantitative", "title": "Hail size (cm)"},
            {"field": "Duration", "type": "quantitative", "title": "Duration in mins"},
            {"field": "State", "type": "nominal", "title": "State"}
          ]
        }
      },
      {
        "data": {
          "url": "./data/hail.csv"
        },
        "transform": [
          {
            "calculate": "toNumber(datum.Latitude)",
            "as": "latitude"
          },
          {
            "calculate": "toNumber(datum.Longitude)",
            "as": "longitude"
          },
          {
            "filter": "datum.latitude != 0 && datum.longitude != 0"
          },
          {
            "filter": "datum['Hail size'] > 11"  
          },
          {
            "calculate": "'Hail Size: ' + datum['Hail size'] + ' cm, Duration: ' + datum['Duration']",
            "as": "customAnnotation"
          }
        ],
        "mark": {
          "type": "text",
          "align": "left",
          "dx": 10, 
          "dy": -10,
          "fontSize": 12,  
          "fontWeight": "bold",
          "fill": "black"
        },
        "encoding": {
          "longitude": { "field": "longitude", "type": "quantitative" },
          "latitude": { "field": "latitude", "type": "quantitative" },
          "text": { "field": "customAnnotation", "type": "nominal" }
        }
      }
      
    ]
  }
  